# git
if [[ $(command -v git) ]]; then
  alias g='git'
  alias ga='git add'
  alias gaa='git add --all'
  alias gb='git branch'
  alias gc='git commit -m'
  alias gch='git checkout'
  alias gf='git fetch'
  alias gpl='git pull'
  alias gps='git push'
  alias gs='git status -sb'
  alias gst='git stash'
  alias gsta='git stash apply'
  alias gr='git rebase'
  alias gd='git diff'
fi

# brew
if [[ $(command -v brew) ]]; then
  alias brewup='brew update && brew upgrade && brew cleanup'
fi

# tmux
if [[ $(command -v tmux) ]]; then
  alias tmux='tmux -2'
fi

# nvim
if [[ $(command -v nvim) ]]; then
  alias vim='nvim'
  alias vi='nvim'
  alias v='nvim'
fi

# fzf
if [[ -n "${ZSH_VERSION:-}" && $(command -v fzf) ]]; then
  eval "$(fzf --zsh)"
  [ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
  export FZF_DEFAULT_COMMAND='rg --files --hidden --follow --glob "!.git/*"'
  export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'
fi

# fbr - checkout git branch including remote branches
fbr() {
  local branches branch
  branches=$(git branch --all | grep -v HEAD) &&
  branch=$(echo "$branches" |
    fzf-tmux -d 40% --reverse --prompt="Checkout branch > " --preview="git log -n 20 --pretty=oneline --color=always {}" |
    sed "s/.* //" |
    sed "s#remotes/[^/]*/##") &&
  git checkout "$branch"
}

# fshow - git commit browser
fshow() {
  git log --graph --color=always \
    --format="%C(auto)%h%d %s %C(black)%C(bold)%cr" "$@" |
  fzf --ansi --no-sort --reverse --tiebreak=index --bind=ctrl-s:toggle-sort \
    --bind "ctrl-m:execute:
      (grep -o '[a-f0-9]\{7\}' | head -1 |
      xargs -I % sh -c 'git show --color=always % | less -R') << 'FZF-EOF'
      {}
FZF-EOF"
}

# fd
if [[ $(command -v fd) ]]; then
  alias fd='fd --color=always'
fi

# ripgrep
if [[ $(command -v rg) ]]; then
  alias rg='rg --color=always --smart-case'
fi

# bat
if [[ $(command -v bat) ]]; then
  alias bat='bat --paging=never'
fi

# eza
if [[ $(command -v eza) ]]; then
  alias eza='eza --icons'
  alias ezat='eza -T -L 3 -a -I "node_modules|.git|.cache" --icons'
  alias ezatl='eza -T -L 3 -a -I "node_modules|.git|.cache" -l --icons'
fi

# tldr
if [[ $(command -v tldr) ]]; then
  alias tldr='tldr --theme="dark"'
fi

# tree
if [[ $(command -v tree) ]]; then
  alias tree='tree -du -h -a'
fi

# htop
if [[ $(command -v htop) ]]; then
  alias htop='htop -d 10'
fi

# httpie
if [[ $(command -v http) ]]; then
  alias http='http --style=fruity'
fi
if [[ $(command -v https) ]]; then
  alias https='https --style=fruity'
fi

# jq
if [[ $(command -v jq) ]]; then
  alias jq='jq --color-output'
fi

# z
if [[ $(command -v z) ]]; then
  _z() {
    local key
    for key in "$@"; do
      cd "$(z -e "$key")" || return 1
    done
  }
  alias z=_z
  alias j=_z
fi
